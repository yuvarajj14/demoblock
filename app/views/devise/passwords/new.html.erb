<div class='row'>
  <div class='col-md-4 col-md-offset-4'>
    <h2 class="text-center">Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post },class:"form col-md-12 center-block") do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true,class:"form-control input-lg" %>
        </div>
      </div>

      <div class="actions">
        <div class="form-group">
          <%= f.submit "Send me reset password instructions",class:"btn btn-primary btn-lg btn-block" %>
        </div>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>